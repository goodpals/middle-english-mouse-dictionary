{
  "manifest_version": 2,
  "name": "Middle English Mouse Dictionary",
  "version": "1.0",
  "description": "A mouse hover Middle English dictionary",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "tabs",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "scripts": ["src/background.js"],
    "type": "module",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/globals.js", "src/helpers.js", "src/content.js", "src/sidebar.js"],
      "css": ["src/style.css"]
    }
  ],
  "web_accessible_resources": [
    "data/*.json"
  ],
  "icons": {
    "48": "img/icon.png",
    "96": "img/icon@2x.png"
  }
}
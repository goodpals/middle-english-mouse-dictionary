{
  "manifest_version": 3,
  "name": "Middle English Mouse Dictionary",
  "version": "1.0",
  "description": "A mouse hover Middle English dictionary",
  "offline_enabled": true,
  "permissions": [
    "activeTab",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popupMenu.html",
    "secondary_popup": "infoPopup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
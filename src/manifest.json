{
  "manifest_version": 2,
  "name": "Middle English Mouse Dictionary",
  "version": "1.0",
  "description": "A mouse hover Middle English dictionary",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "tabs",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "state.js", "background.js"],
      "css": ["infoPopup.css"]
    }
  ]
}
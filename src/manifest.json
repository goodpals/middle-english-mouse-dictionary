{
  "manifest_version": 2,
  "name": "Middle English Mouse Dictionary",
  "version": "1.0",
  "description": "A mouse hover Middle English dictionary",
  "permissions": [
    "activeTab",
    "clipboardWrite",
    "storage",
    "tabs",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module",
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js", "state.js"],
      "css": ["infoPopup.css", "sidebar.css"]
    }
  ],
  "sidebar_action": {
      "default_title": "Middle English",
      "default_panel": "sidebar.html"
  }
}